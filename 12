// Fun√ß√£o recursiva auxiliar para verificar se n √© divis√≠vel por div
int verificaPrimo(int n, int div) {
    // Casos base
    if (n <= 1) {
        return 0;  // N√∫meros menores ou iguais a 1 n√£o s√£o primos
    }
    if (div == 1) {
        return 1;  // Chegamos a 1 sem encontrar divisores, √© primo
    }
    if (n % div == 0) {
        return 0;  // Encontramos um divisor, n√£o √© primo
    }
    
    // Chamada recursiva com o pr√≥ximo divisor
    return verificaPrimo(n, div - 1);
}

// Fun√ß√£o principal que inicia a verifica√ß√£o
int ehPrimo(int n) {
    // Inicia a verifica√ß√£o com div = n-1
    return verificaPrimo(n, n - 1);
}

int main() {
    int numero;
    
    // Solicita entrada do usu√°rio
    printf("Digite um n√∫mero inteiro: ");
    scanf("%d", &numero);
    
    // Verifica e exibe o resultado
